<% publish_to "/orders/ready" do %>
	$("#orders_deserts_<%= @orders_desert.id %>_ready").addClass('disabled');
	
	<% if @delete_group == true %>
		$("#order-<%= @orders_desert.order.id %>-deserts-thead, #order-<%= @orders_desert.order.id %>-deserts-tbody").fadeOut('slow');
	<% end %>
	
<% end %>

<% if @delete_group == true %>
	<% publish_to "/zone/#{@orders_desert.order.table.room_zone.id}" do %>
		$("#notifications").append("<div class=\"alert alert-success\"><a class=\"close\" data-dismiss=\"alert\" href=\"#\">Ã—</a><strong>Deserts</strong> are ready for table <strong><%= @orders_desert.order.table.name %></strong></div>");
	<% end %>
<% end %>

<% publish_to "/orders/track/#{@orders_desert.order.id}" do %>
	$("#deserts-<%= @orders_desert.id %>").addClass('label-success').html("Ready");
<% end %>