<table class="table table-striped ">
<thead>
	<tr>
		<th>Type</th>
		<th>Name</th>
		<th>Quantity</th>
		<th>State</th>
	</tr>
<thead>

<% ['starters', 'dishes', 'deserts'].each do |course| %>

	<thead>
	<tr>
		<th><%= course.capitalize %></th>
		<th colspan="3"></th>
	</tr>

	</thead>
	<tbody>
	<% order.send("orders_#{course}").each do |ox| %>
		<tr>
			<td>
			<td><%= ox.send(course.singularize).name %></td>
			<td><%= ox.quantity %></td>
			<td class="order-state"><span class="label" id="<%= "#{course}-#{ox.id}" %>">Waiting</span></td>
		</tr>
	<% end -%>
	</tbody>

<% end %>

	<tfoot>
		<tr>
			<th>Total</th>
			<td colspan="3" style="text-align:right;"><strong><%= @order.price %>&euro;</strong>&nbsp;<form style="float: right;" action="https://www.paypal.com/cgi-bin/webscr" method="post">
			<input type="hidden" name="cmd" value="_s-xclick">
			<input type="hidden" name="encrypted" value="-----BEGIN PKCS7----------END PKCS7-----
			">
			<input type="image" style="width: auto;" src="https://www.paypalobjects.com/fr_FR/FR/i/btn/btn_paynow_SM.gif" border="0" name="submit" alt="PayPal - la solution de paiement en ligne la plus simple et la plus sécurisée !">
			<img alt="" border="0" src="https://www.paypalobjects.com/fr_FR/i/scr/pixel.gif" width="1" height="1">
			</form>
			</td>
		</tr>
	</tfoot>

</table>

