<%= form_for @table, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :capacity, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :capacity, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :room_zone_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :room_zone_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                tables_path, :class => 'btn' %>
  </div>
<% end %>
